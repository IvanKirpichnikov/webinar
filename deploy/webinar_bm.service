[Unit]
Description=Webinar Telegram Bot
Requires=postgresql.service
Requires=nats-server.service
Requires=webinar_tgbot.service

[Service]
Type=simple
User=webinar-app
WorkingDirectory=/home/webinar-app/webinar-bot
ExecStart=/home/webinar-app/webinar-bot/venv/bin/python -m poetry webinar-bot --start broker_message
Restart=always

[Install]
WantedBy=multi-user.target
